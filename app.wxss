/**app.wxss**/
@import "style/weui.wxss";

/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.image_110 {
    width: 318rpx;
    height: 95rpx;
    position: relative;
    margin: 10rpx 0 0
}

.image_police {
    width: 246rpx;
    height: 246rpx;
    margin: 100rpx 0 0
}


.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0rpx 0;
  justify-content: flex-start;
  box-sizing: border-box;

} 

.image_bg {
    width: 100vw;
    height: 100vh;
    position: relative;
}
.view_inside{
  height: 100vh;
  position: absolute;
  z-index: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;

}