/* pages/main/main.wxss */

.container1 {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  padding: 0rpx 0;
  justify-content: flex-start;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.carousel {
  width: 100%;
  height: 300rpx;
  display: block;
  position: relative;
  background: #bbbbbb;
}
.carousel_item {
  width: 100%;
  height: inherit;
}
.more {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0;
}

.more_text {
  font-size: 15px;
}

.block {
  width: 15rpx;
  height: 45rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.modules {
  width: 100vw;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
}

.module {
  width: 345rpx;
  height: 113rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx 0 20rpx 30rpx;
  justify-content: flex-start;
  border-top: 1rpx solid #bbbbbb;
  border-right: 1rpx solid #bbbbbb;
}

.module_content {
  display: flex;
  flex-direction: column;
  width: 220rpx;
}

.module_title {
  font-size: 16px;
}

.module_desc {
  font-size: 13px;
  color: #777;
}

.img_module {
  width: 113rpx;
  height: 113rpx;
}

.news_list {
  display: flex;
  flex-direction: column;
}

.news {
  display: flex;
  flex-direction: row;

  border-bottom: 1rpx solid #bbbbbb;
  padding: 20rpx;

}

.news_title {
  font-size: 16px;
  width: 560rpx;
  align-self: center;
  padding-left: 20rpx;
}

.news_img {
  width: 121rpx;
  height: 121rpx;
}
