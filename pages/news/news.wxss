/* pages/news/news.wxss */
.container1 {
 
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  padding: 0rpx 0;
  justify-content: flex-start;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.more {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0;
}

.more_text {
  font-size: 15px;
}
.block {
  width: 15rpx;
  height: 45rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.news_list {
  display: flex;
  flex-direction: column;
}

.news {
  display: flex;
  flex-direction: row;

  border-bottom: 1rpx solid #bbbbbb;
  padding: 20rpx;

}

.news_title {
  font-size: 16px;
  width: 560rpx;
  align-self: center;
  padding-left: 20rpx;
}

.news_img {
  width: 121rpx;
  height: 121rpx;
}