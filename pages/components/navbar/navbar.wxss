/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
.nav-wrap {
  /*position: fixed;
  z-index: 9999999;*/
  width: 100vw;
  top: 0;
  background: #fff;
  color: #000;
  background-image: url('data:image/png;base64,')
}
/* 标题要居中 */
.nav-title {
   position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top:0;
  left:0;
  right:0;
  margin: auto;
  font-size: 16px;
  color: #ffffff;
  font-weight: 300;
  padding-top: 20rpx;
}

.nav-capsule {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  width: 140rpx;
  justify-content: space-between;
  height: 100%;
}

.navbar-v-line {
  display: flex; 
  justify-content: flex-start;
  flex-direction: row;
  padding:60rpx 0 0 10rpx
}

