/* pages/components/alertview/alertview.wxss */

.alert-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
  width: 650rpx;
  height: 920rpx;
}

.police_icon_img {
  width: 74rpx;
  height: 74rpx;
  padding: 30rpx 0 0 0;
}

.wuxi_110_text {
  font-size: 12px;
  color: #888;
}

.title_text {
  font-size: 17px;
  font-weight: bold;
}

.content {
  font-size: 12px;
  padding: 0 25rpx 15rpx 25rpx;
  height: 650rpx;
}

.scroll_content {
  height: 600rpx;
  width: 610rpx;
  font-size: 12px;
  padding: 10rpx 0rpx 10rpx 0rpx;
}

.agree_text {
  font-size: 17px;
  padding: 30rpx 0 20rpx 0;
  color: darkcyan;
}

.agree_splitter {
  width: 1rpx;
  border-right: 1rpx solid #bbb;
  padding-top: 10rpx;
}

.divLine {
  background: #e0e3da;
  width: 100%;
  height: 3rpx;
}

.alert-container {
  position: fixed;
  z-index: 2;
  left: 50rpx;
  top: 200rpx;
}

.agree_module {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}
